#! /usr/bin/bash

# go in the directory of current script
SCRIPT=$(readlink -f "$0")
SCRIPT_PATH=$(dirname $SCRIPT)
cd $SCRIPT_PATH

# Search target in arguments (beware case sensitive)
TARGET=codelite
if [ $# -ge 1 ]; then
	TARGET=$1
fi

# start premake
premake5 $TARGET --file=$SCRIPT_PATH/premake_scripts/premake5.lua --os=linux --arch=arm 2>&1 | tee generate.log

